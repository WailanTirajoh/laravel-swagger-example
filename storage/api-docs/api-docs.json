                "operationId": "f1b3cb64ae74885cdcf404eebe09485f",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Number of movies per page (default is 5)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 5
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Current page (default is 1)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response: List of movies",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Unauthorized: Invalid credentials",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "403": {
                        "description": "Forbidden: Insufficient permissions",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "404": {
                        "description": "Not Found: Movies not found",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
